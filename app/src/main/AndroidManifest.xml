<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moneysplitter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainListActivity"
            android:label="@string/title_activity_main_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddForWhatListActivity" />
        <activity
            android:name=".AddPersonListActivity"
            android:label="@string/title_activity_add_person_list" />
        <activity
            android:name=".AddPersonActivity"
            android:label="@string/title_activity_add_person" />
        <activity
            android:name=".AddForWhatActivity"
            android:label="@string/title_activity_add_for_what"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddMeetingActivity"
            android:label="@string/title_activity_add_meeting" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.example.moneysplitter.data.AppProvider"
            android:authorities="com.example.moneysplitter.provider"
            android:exported="false"/>
    </application>

</manifest>